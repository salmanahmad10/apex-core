# Server Config
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Database: PostgreSQL (Docker)
# Using Docker Compose credentials. Start with: docker-compose up -d
DATABASE_URL="postgresql://admin:password123@localhost:5432/apex-core?schema=public"


# Authentication Secrets
JWT_SECRET="super-secret-key-change-me-later"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS="12"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_SUCCESS_URL="http://localhost:4000/success"
STRIPE_CANCEL_URL="http://localhost:4000/cancel"

# Resend Email
RESEND_API_KEY="re_..."
FROM_EMAIL="noreply@apex-core.com"


# OpenAI
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-3.5-turbo"
OPENAI_MAX_TOKENS="1024"


# AWS S3
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_S3_BUCKET="your-bucket-name"


# File Upload
MAX_FILE_SIZE="10485760"


